
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/letter_fragment"
    android:background="@color/colorPrimary"
    tools:context="com.ourproject.learningapp.fragments.LetterFragment">

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3.5"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="ي"
        android:gravity="center"
        android:textSize="150sp"
        android:textColor="@android:color/background_dark"
        android:id="@+id/letter" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:id="@+id/shortmov_layout">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="بِ"
            android:id="@+id/letter_maksor"
            android:gravity="center"
            android:textSize="70sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="بَ"
            android:id="@+id/letter_maftoh"
            android:textSize="70sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="بُ"
            android:id="@+id/letter_madmom"
            android:textSize="70sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/tablets"
            android:layout_width="0dp"
            android:id="@+id/word_image3"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/mouse"
            android:layout_width="0dp"
            android:id="@+id/word_image2"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/rabbit"
            android:layout_width="0dp"
            android:id="@+id/word_image1"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="50dp"
            android:text="Test"
            android:id="@+id/word3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="50dp"
            android:id="@+id/word2"
            android:text="Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000"
            android:id="@+id/word1"
            android:textSize="50dp"
            android:text="Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>
