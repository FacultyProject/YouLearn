<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_self_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ourproject.learningapp.activities.SelfTestActivity"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:layout_marginBottom="2dp"
    app:cardElevation="3dp"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <LinearLayout

        android:orientation="horizontal"
        android:background="#ddf7f1"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="2dp"
            android:paddingBottom="5dp"
            android:id="@+id/home"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:paddingBottom="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/score"
            android:layout_weight="1"
            android:textColor="#41b93f"
            android:textSize="35dp"
            android:text="00"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView

            android:scaleType="centerCrop"
            android:paddingRight="10dp"
            android:paddingLeft="1dp"
            android:src="@drawable/rmark"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:paddingBottom="15dp"
            android:gravity="center"
            android:id="@+id/nofquietions"
            android:layout_weight="1"
            android:textColor="#41b93f"
            android:textSize="35dp"
            android:text="00"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:padding="1dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/qmark"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:paddingBottom="15dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:id="@+id/timer"
            android:layout_weight="1"
            android:textColor="#41b93f"
            android:textSize="35dp"
            android:text="60"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:padding="3dp"
            android:src="@drawable/timer"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>
</android.support.v7.widget.CardView>


    <FrameLayout
        android:layout_weight="9"
        android:id="@+id/fmainST"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </FrameLayout>


</LinearLayout>
