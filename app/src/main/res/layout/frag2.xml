<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >

            <android.support.v7.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                >
                <ImageView

                    android:background="@drawable/img_background"
                    android:id="@+id/qimage1"
                    android:src="@drawable/guess"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                      />
                <TextView
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:text="المستوي الاول"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    >
                    <ImageView

                        android:background="@drawable/img_background"
                        android:id="@+id/qimage2"
                        android:src="@drawable/guess"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="30dp"
                        android:text="المستوي الثاني"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        <HorizontalScrollView
            android:layoutDirection="rtl"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="370dp"
                android:layout_height="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    >
                    <ImageView

                        android:background="@drawable/img_background"
                        android:id="@+id/qimage3"
                        android:src="@drawable/guess"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="30dp"
                        android:text="المستوي الثالث الجزء الاول"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="370dp"
                android:layout_height="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    >
                    <ImageView

                        android:background="@drawable/img_background"
                        android:id="@+id/qimage4"
                        android:src="@drawable/guess"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="30dp"
                        android:text="المستوي الثالث الجزء الثاني"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="370dp"
                android:layout_height="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    >
                    <ImageView

                        android:background="@drawable/img_background"
                        android:id="@+id/qimage5"
                        android:src="@drawable/guess"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="30dp"
                        android:text="المستوي الثالث الجزء الثالث"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>



            <android.support.v7.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    >
                    <ImageView

                        android:background="@drawable/img_background"
                        android:id="@+id/qimage6"
                        android:src="@drawable/guess"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="30dp"
                        android:text="المستوي الرابع"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    >
                    <ImageView

                        android:background="@drawable/img_background"
                        android:id="@+id/qimage7"
                        android:src="@drawable/guess"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="30dp"
                        android:text="المستوي الخامس"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>